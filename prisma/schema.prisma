// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  password         String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  tasks            Task[]
  quranReminders   QuranReminder[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  completed   Boolean  @default(false)
  category    String   @default("general") // general, worship, study, work, etc.
  priority    String   @default("medium") // low, medium, high
  dueDate     DateTime?
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model QuranReminder {
  id          String   @id @default(cuid())
  surahNumber Int
  surahName   String
  startAyah   Int
  endAyah     Int
  notes       String?
  completed   Boolean  @default(false)
  reminderTime DateTime? // Time to remind
  userId      String?
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
